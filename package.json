{
  "name": "pretty-lint",
  "displayName": "PrettyLint",
  "publisher": "0xnetspecter",
  "description": "Interactive ESLint + Prettier configurator for VS Code â€” generate .eslintrc and .prettierrc visually.",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xNetSpecter/pretty-lint"
  },
  "homepage": "https://github.com/0xNetSpecter/pretty-lint",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:pretty-lint.openPrettier",
    "onCommand:pretty-lint.openEslint",
    "onCommand:pretty-lint.openBoth"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pretty-lint.openPrettier",
        "title": "Pretty Lint: Open Prettier Configurator"
      },
      {
        "command": "pretty-lint.openEslint",
        "title": "Pretty Lint: Open ESLint Configurator"
      },
      {
        "command": "pretty-lint.openBoth",
        "title": "Pretty Lint: Open Both Configurators"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src --ext .ts",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
